<div class="nass margin-top-10"> <p><span id="p1" class="anchor"></span>جعفر <span class="c2">(تس ٩٢٢٦)</span> وسعيد بن حفص الطلحي <span class="c2">(تس ٤٩٠٢)</span>، وعلي بن عبد الله بن جعفر <span class="c2">(تس ٣٥٣٣٦)</span>، وعلي بن المعافى بن يعقوب الموصلي <span class="c2">(تس ٣٤١٣٣)</span>، وعيسى بن المنذر <span class="c2">(تهـ ٦٣٣)</span>، ومالك بن إسماعيل <span class="c2">(تهـ ٥٢)</span>، ومحمد بن أسعد التغلبي <span class="c2">(تهـ ١٢٩٣)</span>، ومحمد بن رومي <span class="c2">(تس ٣٨٣١٨)</span>، ومحمد بن زياد بن رزان <span class="c2">(تس ٢٣٧٩٠ و ٢٦٥٢٢)</span>، ومحمد بن الصلت <span class="c2">(تس ٣٠٢٢١)</span>، و <span class="c2">(تهـ ٢٨٠٨)</span>، ومحمد بن عبد الله <span class="c2">(تهـ ٢٥٢٥)</span>، ومسلم بن إبراهيم <span class="c2">(تس ١٤٩٣٤)</span>، ومعلى بن أسد <span class="c2">(تس ٢٨٢٥٦ و ٢٨٥٩٦)</span>، <span class="c2">(تق ٩١٧)</span> وأبي حذيفة موسى بن إسماعيل النهدي <span class="c2">(تهـ ٢٣١٣)</span>، و <span class="c2">(تق ٩٨٤ و ٩٤٨)</span>، والمنجاب بن الحارث <span class="c2">(تس ٥٧٧٩)</span> وهاشم بن عبد الواحد <span class="c2">(تهـ ٢٥١٤)</span>، وهشام بن عبد الملك <span class="c4">[الطيالسي]</span> <span class="c2">(تس ٢٥٢٤)</span>، ويحيى بن أبي بكير الكرماني <span class="c2">(تس ٩٣٧٢ و ٢٨١٣٩ و ٣٠٤٨٩)</span>، ويونس بن محمد <span class="c2">(تهـ ١٧٤٠)</span>، وأبي عوانة <span class="c2">(تس ٢١٧٠٤)</span> والأسود بن عامر <span class="c1">" موضح الأوهام "</span> <span class="c2">(٢/ ٣٣٦ / ٣٧٥)</span>، والحسن بن عمرو بن يوسف العبدي <span class="c1">" الكامل "</span> <span class="c2">(٢/ ٣٢٩ / ٤٦٣)</span>، والحسن بن محمد <span class="c1">" مسند البزار "</span> <span class="c2">(٩/ ١٢٤ / ٣٦٧٣)</span>، وزكريا بن عطية <span class="c1">" مسند البزار "</span> <span class="c2">(٤/ ٤٧ / ١٢١١)</span>، وسعيد بن الأشعث بن مسكين <span class="c1">" مسند البزار "</span> <span class="c2">(٥/ ١٤٠ / ١٧٣٠)</span>، وسعيد بن سلام <span class="c1">" مسند البزار "</span> <span class="c2">(١/ ١٤٤ / ٧٣)</span>، وسلمة بن حيان العتكي <span class="c1">" تاريخ بغداد "</span> <span class="c2">(٥/ ٢٩١ / ٢٧٩٥)</span>، وأبي عاصم <span class="c4">[الضحاك بن مخلد النبيل]</span> <span class="c1">" الثقات "</span> <span class="c2">(٨/ ٥١٣ / ١٤٧٥٠)</span>، وعبد الكريم بن روح البزاز <span class="c1">" التاريخ الكبير "</span> <span class="c2">(٣/ ٣٠٧ / ١٠٤٤)</span>، وأبي عمر عبد الواحد بن محمد، <span class="c1">" موضح الأوهام "</span> <span class="c2">(٢/ ٣٣٦ / ٣٧٥)</span>.<a href="#p1" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p2"></span><span class="c5">روى عنه:</span> أبو بكر البزار <span class="c1">" مسند البزار "</span> <span class="c2">(١/ ١٤٤ / ٧٣)</span>، والمثنى بن إبراهيم الآملي <span class="c2">(تس ٢١٧٠٤)</span> وعنه الطبري، ولا شك أن في الإسناد خطأ ما.<a href="#p2" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p3"></span><span class="c5">التعديل والتجريح:</span> قال ابن أبي حاتم، وابن حبان، ومسلمة بن القاسم، وعبد الله بن إسحاق المدائني،<span class="c5"> والهيثمي:</span> <span class="c1">" الثقة "</span>.<a href="#p3" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p4"></span><span class="c5">وقال أبو حاتم:</span> <span class="c1">" صدوق "</span>.<a href="#p4" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p>
<p><span class="anchor" id="p5"></span><span class="c5">وانظر:</span> <span class="c1">" الجرح والتعديل "</span> <span class="c2">(٦/ ٢١٥ / ٤١١٨)</span>، و<span class="c1">" الثقات "</span> <span class="c2">(٨/ ٥١٣ / ١٤٥٠)</span>، و<span class="c1">" مجمع الزوائد "</span> <span class="c2">(٥/ ٧٢)</span>، و<span class="c1">" تاريخ بغداد "</span> <span class="c2">(١٢/ ١٤١ / ٦٥٩٤)</span>، و<span class="c1">" تهذيب الكمال "</span> <span class="c2">(١٤/ ٢٠٢ / ٣١١٤)</span>، و<span class="c1">" الكاشف "</span> <span class="c2">(١/ ٥٣٤ / ٢٥٩٠)</span>، و<span class="c1">" سير أعلام النبلاء "</span> <span class="c2">(١٢/ ٦٢١ / ٢٤٣)</span>، و<span class="c1">" تهذيب التهذيب "</span> (٥ /<a href="#p5" class="btn_tag btn btn-sm"><span class="text-gray fa fa-copy"></span></a></p> </div>